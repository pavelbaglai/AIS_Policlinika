<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - АИС "Поликлиника"</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/flatpickr")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/flatpickr")
    @Scripts.Render("~/bundles/charts")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @Html.ActionLink("АИС Поликлиника", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Главная", "Index", "Home", null, new { @class = "nav-link" })</li>
                <p>
                </p>
                <li class="nav-item">@Html.ActionLink("Больницы", "Clinics", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Лаборатории", "Labaratories", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("О нас", "About", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Карта", "Map", "Home", null, new { @class = "nav-link" })</li>
                @using DigitalMedicine.Models.Users
                @if (Session["currentUser"] == null)
                {
                    <li class="nav-item">@Html.ActionLink("Авторизация", "Authorization", "Home", null, new { @class = "nav-link" })</li>
                }
                else
                {
                    User user = (User)Session["currentUser"];
                    <li class="nav-item">@Html.ActionLink(user.GetFio(false), "Index", "Cabinet", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Выйти", "Logout", "Cabinet", null, new { @class = "nav-link" })</li>
                }
            </ul>
        </div>
    </nav><br/>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -АИС "Поликлиника"</p>
        </footer>
    </div>
   
    @RenderSection("scripts", required: false)
</body>
</html>
