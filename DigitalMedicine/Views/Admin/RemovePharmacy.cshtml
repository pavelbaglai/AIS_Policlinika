@model IEnumerable<DigitalMedicine.Models.Institution.Pharmacy>
@using DigitalMedicine.Models.Institution;

@{
    ViewBag.Title = "Удаление аптеки";
}

<h2>Удаление лаборатории</h2>
<br />
@using (Html.BeginForm("RemovePharmacy", "Admin", FormMethod.Post))
{
    <div class="form-group">
        <label class="control-label col-md-2">Аптека</label>
        <div class="col-md-10">
            <select id="idPharmacy" name="idPharmacy" class="form-control">
                @foreach (Pharmacy pharmacy in Model)
                {
                    <option value="@pharmacy.Id">@pharmacy.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="form-group col-md-6">
            <input type="submit" value="Удалить" class="btn btn-outline-primary" />
            <a class="btn btn-outline-danger" href="@Url.Action("Index","Cabinet")">В кабинет</a>
        </div>
    </div>
}