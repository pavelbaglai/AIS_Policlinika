@using (Html.BeginForm("ChangeEmail", "Cabinet", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Старый E-mail: ", htmlAttributes: new { @class = "control-label" })
            <div>
                <input class="form-control" type="email" name="oldEmail" placeholder="name@example.com" required />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Новый E-mail: ", htmlAttributes: new { @class = "control-label" })
            <div>
                <input class="form-control" type="email" name="newEmail" placeholder="name@example.com" required />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Подтвердите свой новый E-mail: ", htmlAttributes: new { @class = "control-label" })
            <div>
                <input class="form-control" type="email" name="newEmailRepeat" placeholder="name@example.com" required/>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
        </div>
    </div>
}