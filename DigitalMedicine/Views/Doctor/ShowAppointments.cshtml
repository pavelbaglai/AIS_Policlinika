@model IEnumerable<DigitalMedicine.Models.Appointment>

@{
    ViewBag.Title = "Просмотр электронной очереди пациентов";
}
<h2>Просмотр электронной очереди пациентов</h2>
<table class="table">
    <tr>
        <th>
            ФИО Пациента
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Patient.GetFio(false), "ShowPatientInfo", "Doctor", new { id = item.Patient.Id, idAppointment = item.Id }, null)
                @*@item.Patient.GetFio(false)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                <a class="btn btn-danger" href="@Url.Action("CancelAppointment","Appointment",new {item.Id})">Отменить приём</a>
            </td>
        </tr>
    }
</table>
